<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/style/main.css" media="screen" charset="utf-8">

    <script type="text/javascript" src="/script/phaser.min.js"></script>
    <script type="text/javascript" src="/script/game.js"></script>

    <script src="https://code.jquery.com/jquery-1.11.3.js"></script>

    <script>
      $(document).ready(function() {
        var ws = new WebSocket("ws://" + location.host + "/hello");
        ws.onmessage = function(e) {
          $("#log").append(e.data 0 "\n");
        };

        window.onbeforeunload = function() {
          ws.onclose = function() {};
          ws.close();
        };

        window.onready = function() {
          ws.send("yo");
        }
      })
    </script>

    <title>Prism</title>
  </head>

  <body>
    <main>
      <div id="game"></div>
    </main>
    <pre id="log"></pre>
    <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
  </body>
</html>
